<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/radial_gradient"
    tools:context=".CompleteRegistrationActivity"
    tools:ignore="ExtraText">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.345"
        app:srcCompat="@drawable/bg" />

    <Spinner
        android:id="@+id/sex_spinner"
        android:layout_width="281dp"
        android:layout_height="52dp"
        android:background="@drawable/spinner_w_arrow"
        android:prompt="@string/sex"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.262"
        tools:ignore="SpeakableTextPresentCheck" />


    <Button
        android:id="@+id/datePicker_button"
        android:layout_width="281dp"
        android:layout_height="52dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="183dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="285dp"
        android:background="@drawable/secondfields"
        android:onClick="OpenDatePicker"
        android:paddingTop="2dp"
        android:text="Date Of Birth"
        android:textColor="@color/black"
        android:textSize="13dp"
        android:theme="@style/MytextTheme"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <TextView
        android:text="Enter Your Informations"
        android:theme="@style/MytextTheme"
        android:layout_width="250dp"
        android:layout_height="64dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="438dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.974"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner
        android:id="@+id/bloodgroupSpinner"
        android:layout_width="281dp"
        android:layout_height="52dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="269dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="227dp"
        android:background="@drawable/spinner_w_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck" />

    <Spinner
        android:id="@+id/donorTypeSpinner"
        android:layout_width="281dp"
        android:layout_height="52dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="348dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/spinner_w_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        tools:ignore="SpeakableTextPresentCheck" />
    <Button
        android:id="@+id/continue_button"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:background="@drawable/large_red_button"
        android:text="Continue"
        android:paddingBottom="5dp"
        android:theme="@style/MytextTheme"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.901" />

</androidx.constraintlayout.widget.ConstraintLayout>