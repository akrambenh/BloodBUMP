<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="350dp"
                android:layout_height="320dp"
                android:background="@drawable/box"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.491"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.125" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="320dp"
                android:layout_height="35dp"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="262dp"
                android:background="@drawable/stats_rect"
                app:layout_constraintBottom_toBottomOf="@+id/imageView18"
                app:layout_constraintEnd_toEndOf="@+id/imageView18"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/imageView18"
                app:layout_constraintTop_toTopOf="@+id/imageView18"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/announce_name_textview"
                android:layout_width="300dp"
                android:layout_height="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="14dp"
                android:drawableLeft="@drawable/event_icon"
                android:drawableTint="@color/my_red"
                android:fontFamily="@font/richard_family"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="2dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView9"
                app:layout_constraintEnd_toEndOf="@id/imageView9"
                app:layout_constraintStart_toStartOf="@id/imageView9"
                app:layout_constraintTop_toTopOf="@+id/imageView9"
                tools:ignore="TextSizeCheck" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="320dp"
                android:layout_height="35dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="77dp"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="208dp"
                android:background="@drawable/block_rect"
                app:layout_constraintBottom_toBottomOf="@+id/imageView18"
                app:layout_constraintEnd_toEndOf="@+id/imageView18"
                app:layout_constraintStart_toStartOf="@+id/imageView18"
                app:layout_constraintTop_toTopOf="@+id/imageView18" />

            <TextView
                android:id="@+id/announce_location_textview"
                android:layout_width="300dp"
                android:layout_height="32dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="13dp"
                android:drawableLeft="@drawable/location"
                android:drawableTint="@color/my_red"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="2dp"
                android:textSize="12dp"
                android:theme="@style/MytextTheme"
                app:layout_constraintBottom_toBottomOf="@+id/imageView4"
                app:layout_constraintEnd_toEndOf="@+id/imageView4"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="@+id/imageView4"
                app:layout_constraintVertical_bias="0.315" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="320dp"
                android:layout_height="35dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="136dp"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="149dp"
                android:background="@drawable/block_rect"
                app:layout_constraintBottom_toBottomOf="@+id/imageView18"
                app:layout_constraintEnd_toEndOf="@+id/imageView18"
                app:layout_constraintStart_toStartOf="@+id/imageView18"
                app:layout_constraintTop_toTopOf="@+id/imageView18" />

            <TextView
                android:id="@+id/announce_date_textview"
                android:layout_width="300dp"
                android:layout_height="32dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="13dp"
                android:drawableLeft="@drawable/date_icon"
                android:drawableTint="@color/my_red"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="2dp"
                android:textSize="12dp"
                android:theme="@style/MytextTheme"
                app:layout_constraintBottom_toBottomOf="@+id/imageView5"
                app:layout_constraintEnd_toEndOf="@+id/imageView5"
                app:layout_constraintHorizontal_bias="0.8"
                app:layout_constraintStart_toStartOf="@+id/imageView5"
                app:layout_constraintTop_toTopOf="@+id/imageView5"
                app:layout_constraintVertical_bias="0.473" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="320dp"
                android:layout_height="35dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="192dp"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="93dp"
                android:background="@drawable/block_rect"
                app:layout_constraintBottom_toBottomOf="@+id/imageView18"
                app:layout_constraintEnd_toEndOf="@+id/imageView18"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/imageView18"
                app:layout_constraintTop_toTopOf="@+id/imageView18" />

            <TextView
                android:id="@+id/announce_time_textview"
                android:layout_width="300dp"
                android:layout_height="32dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="13dp"
                android:drawableLeft="@drawable/time_icon"
                android:drawableTint="@color/my_red"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="2dp"
                android:textSize="12dp"
                android:theme="@style/MytextTheme"
                app:layout_constraintBottom_toBottomOf="@+id/imageView6"
                app:layout_constraintEnd_toEndOf="@+id/imageView6"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/imageView6"
                app:layout_constraintTop_toTopOf="@+id/imageView6" />

            <Button
                android:id="@+id/announce_book_button"
                android:layout_width="250dp"
                android:layout_height="48dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="247dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/large_red_button"
                android:drawableLeft="@drawable/bookmark_icon"
                android:paddingLeft="20dp"
                android:paddingRight="38dp"
                android:paddingBottom="5dp"
                android:text="Book"
                android:textColor="@color/white"
                android:theme="@style/MytextTheme"
                app:layout_constraintBottom_toBottomOf="@+id/imageView18"
                app:layout_constraintEnd_toEndOf="@+id/imageView18"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/imageView18"
                app:layout_constraintTop_toTopOf="@+id/imageView18" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>