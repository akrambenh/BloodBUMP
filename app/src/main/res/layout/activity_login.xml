<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <EditText
        android:id="@+id/login_email"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="134dp"
        android:background="@drawable/field"
        android:drawableLeft="@drawable/email_icon"
        android:drawablePadding="5dp"
        android:drawableTint="@color/med_blue"
        android:ems="10"
        android:fontFamily="@font/richard_family"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:paddingLeft="10dp"
        android:textColorHint="@color/light_red"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.198"
        tools:ignore="SpeakableTextPresentCheck,TextSizeCheck" />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="134dp"
        android:background="@drawable/field"
        android:drawableLeft="@drawable/key_icon"
        android:drawablePadding="5dp"
        android:drawableTint="@color/med_blue"
        android:ems="10"
        android:fontFamily="@font/richard_family"
        android:hint="Password"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:paddingLeft="10dp"
        android:textColorHint="@color/light_red"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35"
        tools:ignore="SpeakableTextPresentCheck,TextSizeCheck" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="305dp"
        android:layout_height="48dp"
        android:background="@drawable/large_red_button"
        android:text="Login"
        android:theme="@style/MytextTheme"
        android:textColor="@color/white"
        android:paddingBottom="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.468"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="255dp"
        android:layout_height="28dp"
        android:clickable="true"
        android:minHeight="48dp"
        android:onClick="resetPassword"
        android:text="Forgot Password?"
        android:textColor="@color/med_blue"
        android:textSize="15dp"
        android:theme="@style/MytextTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.576"
        tools:ignore="TouchTargetSizeCheck,TextSizeCheck" />

    <Button
        android:id="@+id/button"
        android:layout_width="81dp"
        android:layout_height="32dp"
        android:background="@drawable/large_red_button"
        android:paddingBottom="10dp"
        android:text="LOGIN"
        android:textColor="@color/white"
        android:textSize="11dp"
        android:theme="@style/MytextTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.262"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,TextSizeCheck" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="switch_signUp"
        android:text="SIGN UP"
        android:textColor="@color/my_red"
        android:textSize="11dp"
        android:theme="@style/MytextTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.703"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck,TextSizeCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>